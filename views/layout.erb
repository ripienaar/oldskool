<html>
  <head>
    <link rel="stylesheet/less" type="text/css" href="/lib/bootstrap.less">
    <script src="/js/less-1.1.3.min.js" type="text/javascript"></script>
    <link rel="search" type="application/opensearchdescription+xml" title="Oldskool" href="/opensearch.xml" />
    <title>Oldskool</title>
  </head>
  <body style="padding-top: 80px;">
    <div class="topbar" data-dropdown="dropdown" >
      <div class="topbar-inner">
        <div class="container">
          <h3><a href="/">Oldskool</a></h3>
          <% if @topmenu %>
            <ul class="nav">
            <% @topmenu.each do |item| %>
              <li><a href="<%= item[:url] %>"><%= item[:title] %></a></li>
            <% end %>
          </ul>
          <% end %>
          <form action="/do" method="get" class="pull-right"><input name="q" type="text" placeholder="#" /></form>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="span4">
          <% if @sidemenu %>
            <% @sidemenu.each do |item| %>
              <p><a href="<%= item[:url] %>"><button type="submit" class="btn"><%= item[:title] %></button></a></p>
            <% end %>
          <% end %>
        </div>
        <div class="span12">
          <% if @error %>
            <div class="alert-message error">
              <%= @error %>
            </div>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
